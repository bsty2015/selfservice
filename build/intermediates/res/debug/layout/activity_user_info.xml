<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="jieyun.jjlink.com.beforedemo.UserInfoActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_info"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="1dip"
        android:background="#fff"
        android:textSize="24dp"
        />
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="#f4f4f4"
        android:gravity="center_vertical">

        <TableRow
            android:layout_margin="1dip"
            android:background="#f4f4f4">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:background="#fff"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="用户名"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_username"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="left" />
        </TableRow>


        <TableRow
            android:layout_margin="1dip"
            android:background="#f4f4f4">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:background="#fff"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="姓名"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_fullname"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_margin="1dip"

            android:background="#f4f4f4">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:background="#fff"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="别名"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_alias"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_margin="1dip"

            android:background="#f4f4f4">

            <TextView
                android:layout_weight="0.5"
                android:background="#fff"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="证件号"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_card_no"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_margin="1dip"

            android:background="#f4f4f4">

            <TextView
                android:layout_weight="0.5"
                android:background="#fff"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="电话"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_mobile"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_margin="1dip"

            android:background="#f4f4f4">

            <TextView
                android:layout_weight="0.5"
                android:background="#fff"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="账号状态"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_status"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_margin="1dip"

            android:background="#f4f4f4">

            <TextView
                android:layout_weight="0.5"
                android:background="#fff"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="创建时间"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_create_time"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_margin="1dip"

            android:background="#f4f4f4">

            <TextView
                android:layout_weight="0.5"
                android:background="#fff"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="有效期"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_expirydate"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_margin="1dip"

            android:background="#f4f4f4">

            <TextView
                android:layout_weight="0.5"
                android:background="#fff"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="账户余额"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_balance"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_margin="1dip"

            android:background="#f4f4f4">

            <TextView
                android:layout_weight="0.5"
                android:background="#fff"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="本期服务名"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_service_name"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="left" />
        </TableRow>

        <TableRow
            android:layout_margin="1dip"

            android:background="#f4f4f4">

            <TextView
                android:layout_weight="0.5"
                android:background="#fff"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="下期服务名"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_next_service_name"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="left" />
        </TableRow>
    </TableLayout>

</LinearLayout>
